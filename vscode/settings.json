{
    "vim.easymotion": true,
    "vim.useSystemClipboard": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<space>"
            ],
            "commands": [
                "vspacecode.space"
            ]
        },
        {
            "before": [
                ","
            ],
            "commands": [
                "vspacecode.space",
                {
                    "command": "whichkey.triggerKey",
                    "args": "m"
                }
            ]
        },
        {
            "before": [
                ">"
            ],
            "commands": [
                "editor.action.indentLines"
            ]
        },
        {
            "before": [
                "<"
            ],
            "commands": [
                "editor.action.outdentLines"
            ]
        }
    ],
    "editor.glyphMargin": false,
    "editor.cursorBlinking": "blink",  // Options: "blink", "smooth", "phase", "expand", "solid"
    "workbench.colorCustomizations": {
        //"editorCursor.foreground": "#fc1c5b",
        //"terminalCursor.foreground": "#ff0000",
        //"editorCursor.foreground": "#f92660",
        "editorCursor.foreground": "#ff033e",
        "editorCursor.background": "#000000",
        "[vim.normalMode]": {
            "editorCursor.foreground": "#000000"
        },
        "[vim.insertMode]": {
            "editorCursor.foreground": "#000000"
        },
        "[vim.visualMode]": {
            "editorCursor.foreground": "#000000"
        },
        "terminal.background": "#00000000",
        "editor.background": "#262f33",
        "sideBar.background": "#262f33",
        "editorGutter.background": "#262f33",
        "editorLineNumber.foreground":"#3f454f",
        "editorLineNumber.activeForeground":"#7f848e",
        "sideBar.foreground": "#ffffff",
    },
"vim.vimrc.enable": true,
"editor.minimap.enabled": false,
"editor.lineNumbers": "relative",
"workbench.statusBar.visible": false,
"workbench.editor.showTabs": "none",
"window.commandCenter": false,
"cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
],
"workbench.settings.applyToAllProfiles": [
    "workbench.colorCustomizations"
],
"window.titleBarStyle": "custom",
"editor.fontSize": 18,
"editor.fontFamily": "Cascadia Mono",
"workbench.editorAssociations": {
    "*.doc": "default"
},
"workbench.layoutControl.enabled": false,
"workbench.editor.editorActionsLocation": "hidden",
"window.customTitleBarVisibility": "windowed",
"breadcrumbs.enabled": false,
"editor.stickyScroll.enabled": false,
"editor.guides.indentation": false,
"chat.commandCenter.enabled": false,
"editor.renderLineHighlight": "line",
"editor.scrollbar.horizontal": "hidden",
"editor.scrollbar.vertical": "hidden",
"workbench.activityBar.location": "hidden",
"makefile.configureOnOpen": true,
"workbench.colorTheme": "Horizon"
}
